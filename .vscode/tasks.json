{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "BuildProgram",
        "type": "shell",
        "command": "C:/Program Files/mingw64/bin/gcc.exe",
        "args": [
            "-g",
            "${file}", 
            "-Wall",
            "-o", 
            "${fileDirname}/main.exe"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  